<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/navigation_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/splash"/>
            <ImageView
                android:id="@+id/series_photo_layer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/image_gradient"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                />
            <com.ccm.android.ccm.RoundedImageView
                android:id="@+id/prof_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof_image"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/nav_user_details_container"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kishan Subhash Miryala"
                        android:textColor="@android:color/white"
                        android:id="@+id/user_name"

                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:id="@+id/nav_mobile_no"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:gravity="center_horizontal|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nav_wallet_more_details"
                        android:src="@drawable/ic_white_arrow_right_36dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginBottom="4dp"
        android:background="#BDBDBD"
        />
</LinearLayout>