<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/persnolizedArticleCardview"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardElevation="6dp"
        cardview:cardCornerRadius="1dp"
        cardview:cardPreventCornerOverlap="false"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/white"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/min_details"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfsdfsfd"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_alignParentTop="true"
                    >
                </TextView>

                <TextView
                    android:id="@+id/work_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="16dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/min_details"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:id="@+id/more_details">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/occupation_row"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:layout_marginBottom="4dp"
                            android:text="Occupation : "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="asddsfsfgsfs"
                            android:textColor="@color/list_val"
                            android:id="@+id/occupation" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/annual_income_row"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:layout_marginBottom="4dp"
                            android:text="Income : "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="asddsfsfgsfs"
                            android:textColor="@color/list_val"
                            android:id="@+id/income" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pan_row"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:layout_marginBottom="4dp"
                            android:text="Pan : "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="asddsfsfgsfs"
                            android:textColor="@color/list_val"
                            android:id="@+id/pan_card" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aadhar_row"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aadhar Number : "
                            android:id="@+id/textView"
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="asdasdasdasd"
                            android:textColor="@color/list_val"
                            android:id="@+id/aadhar_card" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/address_row"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:text="Residence : "
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/address"
                            android:text="Hyderabad"
                            android:textColor="@color/list_val" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ofc_address_row"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Office : "
                            android:textAllCaps="true"
                            android:textColor="@color/list_lbl"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secunderabad"
                            android:textColor="@color/list_val"
                            android:id="@+id/ofc_address" />
                    </LinearLayout>
                </LinearLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/button_cntnr"-->
                    <!--android:layout_below="@+id/ofc_address_row"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_alignParentBottom="false"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_gravity="center">-->
                    <!--<org.honorato.multistatetogglebutton.MultiStateToggleButton-->
                        <!--android:id="@+id/mstb_multi_id"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--mstb:values="@array/status_array"-->
                        <!--mstb:mstbPrimaryColor="@color/colorAccent"-->
                        <!--mstb:mstbSecondaryColor="@color/almost_white"-->
                        <!--android:gravity="center_horizontal"-->
                        <!--android:layout_centerHorizontal="true" />-->
                <!--</RelativeLayout>-->

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>